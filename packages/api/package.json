{
	"name": "api",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"author": "caiquearaujo",
	"license": "MIT",
	"homepage": "https://github.com/caiquearaujo/time-tracking-app#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caiquearaujo/time-tracking-app.git"
	},
	"bugs": {
		"url": "https://github.com/caiquearaujo/time-tracking-app/issues"
	},
	"scripts": {
		"check": "tsc --noEmit",
		"build": "cross-env NODE_ENV=production tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"watch:build": "nodemon --watch 'src/**/*' -e ts --exec npm run build",
		"start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' ./src/index.ts",
		"launch": "cross-env NODE_ENV=production node ./build/index.js",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ext .ts --ignore-path .gitignore --fix src",
		"test": "cross-env NODE_ENV=test jest --coverage --watchAll",
		"test:once": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage",
		"test:debug": "cross-env NODE_ENV=test node --inspect ./node_modules/.bin/jest --runInBand"
	},
	"dependencies": {
		"@fastify/compress": "^6.2.1",
		"@fastify/cors": "^8.2.1",
		"@fastify/helmet": "^10.1.0",
		"@fastify/rate-limit": "^8.0.0",
		"@piggly/ddd-toolkit": "^1.1.5",
		"@piggly/event-bus": "^1.0.1",
		"@piggly/fastify-chassis": "^1.0.1",
		"@piggly/mysql": "^1.1.2",
		"bcrypt": "^5.1.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"fastify": "^4.15.0",
		"joi": "^17.9.2",
		"joi-translation-pt-br": "^0.0.6",
		"moment-timezone": "^0.5.43",
		"mysql2": "^3.5.0",
		"pino": "^8.14.1",
		"pino-pretty": "^10.0.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.5",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"concurrently": "^8.2.0",
		"eslint": "^8.45.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^8.9.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "^29.6.2",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.0",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.7",
		"tsconfig-paths": "^4.2.0",
		"tslib": "^2.6.1",
		"typescript": "^5.1.6"
	}
}